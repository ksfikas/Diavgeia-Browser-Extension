{
    "name": "Επέκταση Διαύγειας",
    "version": "1.3",
    "author": "Konstantinos Sfikas, PhD",
    "description": "Unofficial diavgeia.gov.gr extension for various manipulations of the ADA number",
    "permissions": ["storage", "clipboardWrite", "clipboardRead", "notifications", "tabs"],
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "manifest_version": 2
}